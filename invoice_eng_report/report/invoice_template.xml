<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="invoice_template_report_id">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <strong>
                                    <h1 style=" font-family: Roboto;">INVOICE</h1>
                                </strong>
                            </div>
                            <div class="row ">
                                <div class="col-5">
                                    <table class="w-100 h-15"
                                           style="border: 1px solid #ffffff; font-size: 12px; font-family: Roboto;">
                                        <tr>
                                            <td>
                                                <strong>Invoice No</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Invoice Date</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.invoice_date"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Delivery Date</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <t t-if="o.invoice_origin">
                                                    <t t-esc="request.env['sale.order'].search([('name', '=', o.invoice_origin)]).commitment_date"/>
                                                </t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Saleperson</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.user_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Tax ID</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.partner_id.vat"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Company ID</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.partner_id.company_registry"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Payment Terms</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <t t-if="o.invoice_origin">
                                                    <t t-esc="request.env['sale.order'].search([('name', '=', o.invoice_origin)]).payment_term_id.name"/>
                                                </t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Order Date</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <t t-if="o.invoice_origin">
                                                    <t t-esc="request.env['sale.order'].search([('name', '=', o.invoice_origin)]).date_order"/>
                                                </t>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <strong>Customer Reference</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <t t-esc="request.env['sale.order'].search([('name', '=', o.invoice_origin)]).client_order_ref"/>

                                                <!--                                                <span t-field="o.client_order_reference"/>-->
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-2"/>
                                <div class="col-5">
                                    <table class="w-100 h-15"
                                           style="border: 1px solid #ffffff; font-size: 12px; font-family: Roboto;">
<!--                                        <tr>-->
<!--                                            <td>-->
<!--                                                <strong>Customer Code</strong>-->
<!--                                            </td>-->
<!--                                            <td>:</td>-->
<!--                                            <td>-->
<!--                                                <span t-esc="o.partner_id.customer_code"/>-->
<!--                                            </td>-->
<!--                                        </tr>-->
                                        <tr>
                                            <td>
                                                <strong>Payment Method</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <t t-if="o.invoice_origin">
                                                    <t t-esc="request.env['sale.order'].search([('name', '=', o.invoice_origin)]).magento_payment_method_id.payment_method_name"/>
                                                </t>
                                                <t t-else=""/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Company Name</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.partner_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Address</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-field="o.partner_id.street"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>City</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.partner_id.city"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Postal Code</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-esc="o.partner_id.zip"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Country</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-field="o.partner_id.country_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Tel No #</strong>
                                            </td>
                                            <td>:</td>
                                            <td>
                                                <span t-field="o.partner_id.phone"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!--                             this is main table of the report -->
                            <br/>
                            <br/>
                            <div class="row">
                                <table class="table">
                                    <thead style="border: 1px solid black; font-size: 18px; font-family: Roboto;">
                                        <tr>
                                            <th>Product Code</th>
                                            <th>Product Name</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Discount</th>
                                            <th>VAT</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tbody style="border: 1px solid #ffffff;">
                                            <tr>
                                                <td>
                                                    <span t-field="line.product_id.default_code"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.discount"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.tax_ids.amount"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.price_subtotal"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </t>
                                </table>
                            </div>
                            <!--                             this div is for the Total Amount -->
                            <br/>
                            <div class="float-right row">
                                <div class="col-8"/>
                                <div class="col-4">
                                    <table class="w-100" style="text-align:center;">
                                        <tr>
                                            <td>Subtotal:</td>
                                            <td>
                                                <span t-field="o.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Taxes:</td>
                                            <td>
                                                <span t-field="o.amount_tax"/>
                                            </td>
                                            <tr style="background-color:rgb(240, 240, 240);">
                                                <td>
                                                    <strong>Total:</strong>
                                                </td>
                                                <td>
                                                    <strong>
                                                        <span t-field="o.amount_total"/>
                                                    </strong>
                                                </td>
                                            </tr>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>