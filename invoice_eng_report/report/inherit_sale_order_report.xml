                            <!--                                                     <t t-esc="request.env['sale.order'].search([('name', '=', doc.invoice_origin)]).commitment_date"/> -->
                            <!--                                                 </t> -->
                            <!--                                 </td> -->
                            <!--                             </tr> -->
                            <tr>
                                <td>
                                    <strong>Saleperson</strong>
